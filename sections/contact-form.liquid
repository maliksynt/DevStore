<div class="flex flex-col items-center my-8">
  {% if section.settings.title != blank %}
    <h1 class="my-8 text-3xl font-medium md:my-16">{{ section.settings.title }}</h1>
  {% endif %}
  {% form 'contact' %}

    {% if form.errors %}
      <div class="p-5 border ">
        <div class="flex items-center w-full mr-3 flex-grox">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="ml-3 text-sm font-medium">
            <p>Oh no! your message is not sent!</p>
          </div>
        </div>
        <ul class="px-4 mb-3 list-decimal ml-7">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full p-5 my-3">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <p class="ml-3 text-sm font-medium">Your message was sent successfully!</p>
      </div>
    {% endif %}

    <div class="items-center justify-center flex-1 max-w-6xl px-4 mx-auto">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="text-xs font-medium text-gray-500 uppercase" for="contact_name">Name</label>
          <input
            class="w-full px-4 py-3 mb-3 text-gray-700 border"
            type="text"
            name="contact[name]"
            id="contact_name">
        </div>
        <div class="px-3 md:w-1/2">
          <label for="contact_email" class="text-xs font-medium text-gray-500 uppercase">Email address</label>
          <input
            class="w-full px-4 py-3 mb-3 text-gray-700 border"
            type="email"
            name="contact[email]"
            id="contact_email">
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label class="text-xs font-medium text-gray-500 uppercase" for="contact_message">Message</label>
          <textarea
            class="w-full px-4 py-3 mb-3 text-gray-700 border"
            name="contact[body]"
            id="contact_message"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            class="w-full px-4 py-2 text-base font-medium text-white bg-gray-900 border cursor-pointer hover:bg-gray-700"
            type="submit"
            value="Submit message">
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}