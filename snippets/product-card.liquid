<div class="w-full px-3 py-6">
  <div class="overflow-hidden bg-white border rounded-lg shadow-lg">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="overflow-hidden h-80">
          <img
            class="object-cover w-full h-full transition duration-1000 ease-in-out transform hover:scale-105"
            src="{{ product.featured_image | image_url: width: 1100 }}"
            width="900"
            height="600"
            alt="{{ product.featured_image.alt }}">
        </div>

      {% else %}
        {{ "product-1" | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      {% if vendor %}
        <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      {% endif %}
      <a class="font-medium text-gray-700 uppercase" href="{{ product.url }}">{{ product.title }}</a>

      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>